{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src"],
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "src/public/*"]
}